{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "types": ["node", "vite/client"],
    "paths": {
      "#build/ui": ["./node_modules/@nuxt/ui/.nuxt/ui"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "forge.config.ts",
    "vite.*.config.ts",
    "vite.*.config.mjs",
    "forge.env.d.ts",
    "auto-imports.d.ts",
    "components.d.ts"
  ]
}
